{
  "extends": "../tsconfig.json",
  "ts-node": {
    "transpileOnly": true,
    "require": ["typescript-transform-plugin/register"]
  },
  "compilerOptions": {
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      },
    ],
    "declaration": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment"
  },
  "include": [
    "../src"
  ]
}